<script>
var app = angular.module("myapp", []);
app.controller('func', function($scope) {
$scope.uname = '';
$scope.data = '';
$scope.op = '';
$scope.pin = '';
});
var ap = angular.module('q2', ['ngRoute']);
ap.config(function($routeProvider) {
$routeProvider.when('/one', {
templateUrl: './2105.html'
})
.when('/two', {
templateUrl: '2096.html'
})
.when('/three', {
templateUrl: '2117.html'
})
.when('/four', {
templateUrl: '2104.html'
});
});
</script>
</head>
